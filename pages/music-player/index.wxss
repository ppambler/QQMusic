/* pages/music-player/index.wxss */
page {
  color: #fff;
}

/* 背景毛玻璃效果 */
.bg-image, .bg-cover {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  /* z-index 只有在定位的时候才会生效 */
  z-index: -1;
}

.bg-cover {
  background-color: rgba(0,0,0,.5);
  /* 给 blur 的参数越大，背景的图案轮廓越模糊*/
  backdrop-filter: blur(30px);
}

/* 自定义导航 */
.tab {
  display: flex;
  font-size: 28rpx;
  color: #999;
}

.tab .divider {
  margin: 0 10rpx;
}

.tab .active {
  color: #fff;
}
